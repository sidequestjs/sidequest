{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".vitepress/dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "test:ci": {
      "env": ["POSTGRES_URL", "MYSQL_URL", "MONGODB_URL"],
      "dependsOn": ["^test:ci"]
    }
  }
}
