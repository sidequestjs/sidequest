{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": false,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/tests/*": ["./tests/*"]
    },
    "noEmitOnError": true
  },
  "include": ["tests/**/*"],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
